/* components/assurance/assurance.wxss */
.assurance{
  position: fixed;
  width: 750rpx;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  left: 0;
  top: 0;
  z-index: 999998;
}
.assurance_con{
  width: 750rpx;
  position: fixed;
  height: 565rpx;
  background-color: #fff;
  left: 0;
  bottom: 0;
  z-index: 999999;
  animation: assurance .5s;
}
.head{
  color:#1B2D3E;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  padding-top:40rpx;
}
.con_item{
  padding-left: 40rpx;
  margin-top: 40rpx;
  position: relative;
}
.con_item::before{
  position: absolute;
  content: " ";
  height: 8rpx;
  width: 8rpx;
  background-color: #E31436;
  left: 20rpx;
  top: 20rpx;
  border-radius: 50%;
}
.con_item_head{
  font-size: 30rpx;
  color: #43566B;
}
.con_item_con{
  font-size: 26rpx;
  color: #95A9C1;
  margin-top:10rpx;
}
@keyframes assurance
{
from {bottom: -600rpx;}
to {bottom: 0;}
}