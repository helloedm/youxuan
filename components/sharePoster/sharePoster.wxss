/* components/sharePoster/sharePoster.wxss */
.share{
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 99989;
  top: 0;
  left: 0;
}
.mask{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: rgba(0, 0, 0, 0.5);
}
.content{
  height: 390rpx;
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  background-color: #fff;
}
.content_title{
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}
.content_title text{
  display: inline-block;
  height: 54rpx;
  background-color: #FFF1F3;
  color: #E31436;
  line-height: 54rpx;
  font-size: 30rpx;
  padding: 0 20rpx;
  transform: translateY(20rpx);
}
.content_item{
  height: 230rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.item_btn{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0;
  margin:0;
}
.item_btn image{
  width: 100rpx;
  height: 100rpx;
}
.item_btn text{
  color: #43576B;
  font-size: 26rpx;
  margin-top: 20rpx;
  line-height: 30rpx;
}
.cancel{
  background-color: #F5F8FA;
  line-height: 100rpx;
  text-align: center;
  color: #1B2E3F;
  font-size: 32rpx;
}
.show_img{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 99999;
}
.show_con{
  width: 80%;
  height: 965rpx;
  position: absolute;
  top: 50%;
  left: 10%;
  overflow: hidden;
  transform: translate(0,-50%);
  border-radius: 20rpx;
}
.show_con image{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  width: 100%;
}
.canvas4{
  position: fixed;
  left: -1000%;
  top: 0;
}