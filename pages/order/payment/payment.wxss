/* pages/order/payment/payment.wxss */
.payment_time{
  height: 180rpx;
  box-shadow:0px 0px 6px rgba(31,45,61,0.06);
  background-color: #fff;
  display: flex;
  flex-direction: column;
  text-align: center;
  color: #475669;
  font-size: 24rpx;
  justify-content: center;
}
.payment_time .time{
  font-size: 48rpx;
  color: #1F2D3D;
  font-weight: 600;
  line-height: 80rpx;
}
.payment_con{
  height: 88rpx;
  background-color: #fff;
  font-size: 32rpx;
  color: #1F2D3D;
  padding: 0 20rpx;
  line-height: 88rpx;
  display: flex;
  justify-content: space-between;
  margin-top: 6rpx;
}
.payment_con>text:nth-child(2){
  color: #E31436;
  font-weight: 600;
}
.payment_btn{
  width: 710rpx;
  height: 88rpx;
  position: fixed;
  bottom: 20rpx;
  left: 20rpx;
}
.payment_btn button{
  background-color: #E31436;
  color: #fff;
}