/* pages/mine/share/share.wxss */
.canvas{
  width: 750px;
  height: 1334px;
  position: fixed;
  left: -750px;
  top: 0;
}
button{
  cursor: pointer; 
  outline:none;
  -webkit-appearance: none; 
}
.footer{
  position: fixed;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.sharefriend,.sharefriends{
  font-size: 32rpx;
  padding: 0;
  margin: 0;
  width: 345rpx;
  height: 70rpx;
  line-height: 70rpx;
  box-sizing: border-box;
  text-align: center;
}
.cart-flag{
  padding-bottom: 68rpx;
}
.sharefriend{
  border: 1px solid #E31436;
  color: #E31436;
  border-radius: 10rpx;
}
.sharefriends{
  background-color: #E31436;
  color: #fff;
  border-radius: 10rpx;
}
.show_img{
  top: 0;
  left: 0;
  z-index: 99999;
}
.show_con{
  width: 80%;
  height: 965rpx;
  overflow: hidden;
  border-radius: 20rpx;
  position: relative;
  margin: 50rpx auto 0;
}
.show_con image{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  width: 100%;
}