page{
  background: #fff;
}
.content{
  width: 100%;
  height: 100%;
  overflow: hidden;
  padding-bottom: 70rpx;
}
.content .line{
  width:610rpx;
  /* height:1042rpx; */
  padding-bottom: 77rpx;
  border:2px dashed rgba(224,230,237,1);
  border-radius:50px;
  margin: 0 auto;
  margin-top: 94rpx;
}
.content .line .image{
  width: 130rpx;
  margin: 0 auto;
  display: block;
  /* margin-top: -50%; */
