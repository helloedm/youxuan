  color: #1B2E3F;
  font-size: 28rpx;
  font-weight: bold;
  width: 70%;
  margin: 0 auto;
  margin-top: 50rpx;
  letter-spacing: 3rpx;
}
.weixin{
  color: #43566B;
  font-size: 30rpx;
  margin-top: 73rpx;
}
